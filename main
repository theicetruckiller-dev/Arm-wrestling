local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()
local Window = OrionLib:MakeWindow({Name = "Mobil Kontrol Paneli", HidePremium = true, SaveConfig = true, ConfigFolder = "Orion_Config_ACW"})

local MainTab = Window:MakeTab({
	Name = "Ana Kontroller",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

_G.SpamWeightEvent = false
_G.SpamProximity = false

MainTab:AddToggle({
	Name = "Weight Event Spammer",
	Callback = function(Value)
        _G.SpamWeightEvent = Value
        if Value then print("Weight Event Spammer: AÇIK") else print("Weight Event Spammer: KAPALI") end
	end    
})

MainTab:AddToggle({
	Name = "Otomatik Toplama (Yakındakini Spamle)",
	Callback = function(Value)
        _G.SpamProximity = Value
        if Value then print("Otomatik Toplama: AÇIK") else print("Otomatik Toplama: KAPALI") end
	end    
})

-- Arka planda sürekli çalışacak olan spam döngüleri
task.spawn(function()
    while true do
        if _G.SpamWeightEvent then
            pcall(function()
                game:GetService("ReplicatedStorage").WeightSystem:FireServer(true)
            end)
        end
        if _G.SpamProximity then
            pcall(function()
                local player = game:GetService("Players").LocalPlayer
                local character = player.Character
                if character and character:FindFirstChild("HumanoidRootPart") then
                    local rootPart, nearestPrompt, shortestDistance = character.HumanoidRootPart, nil, math.huge
                    for i,v in pairs(workspace:GetDescendants()) do
                        if v:IsA("ProximityPrompt") and v.Enabled then
                            local p = v.Parent
                            if p:IsA("BasePart") then
                                local d = (rootPart.Position - p.Position).Magnitude
                                if d < shortestDistance and d <= v.MaxActivationDistance then
                                    shortestDistance = d; nearestPrompt = v
                                end
                            end
                        end
                    end
                    if nearestPrompt then
                        game:GetService("ProximityPromptService"):PromptTriggered(nearestPrompt)
                    end
                end
            end)
        end
        task.wait(0.1) -- Spam hızını buradan ayarlayabilirsin, daha küçük sayı daha hızlı spam demek.
    end
end)

OrionLib:Init()
